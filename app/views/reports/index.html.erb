<p id="notice"><%= notice %></p>

  <h1>Appointments Weekly Report</h1>
  <h4><%= "#{@date_from} to #{@date_to}" %></h4>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Appointment Date</th>
      <th>Appointment Time</th>
      <th>Patient</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_date.strftime("%A, %e %B, %Y") %></td>
        <td><%= appointment.appointment_time.strftime("%I:%M%p") %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.doctor.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= column_chart @appointments.group_by_day_of_week(:appointment_date, format: "%a").count %>
