<p id="notice"><%= notice %></p>

<h1>Hospitals</h1>

<div class="col-md-4">
<%= form_tag patients_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil  %>
  </p>
<% end %>
</div>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>County</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.hospital_name %></td>
        <td><%= hospital.county %></td>
        <td><%= link_to 'Show', hospital, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="btn-group">
  <%= link_to 'New Hospital', new_hospital_path, class: "btn btn-primary" %>
  <%= link_to "Generate Report", hospitals_path(:format => "csv"), class: "btn btn-success" %>
</div>
