<p id="notice"><%= notice %></p>

<h1><%= @patient.name %> Records</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Reason for Visit</th>
      <th>Infection</th>
      <th>Injury</th>
      <th>Observations</th>
      <th>Medications</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.reason_for_visit %></td>
        <td><%= record.infection %></td>
        <td><%= record.injury %></td>
        <td><%= record.observations %></td>
        <td><%= record.medications %></td>
        <td><%= record.patient.name %></td>
        <td><%= link_to 'Show', patient_record_path(@patient, record), class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="btn-group">
  <%= link_to 'New Record', new_patient_record_path, class: "btn btn-primary" %>
  <%= link_to "Generate CSV", patient_records_path(:format => "csv"), class: "btn btn-success" %>
</div>
