<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<div class="col-md-2">
<%= form_tag patients_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil  %>
  </p>
<% end %>
</div>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.date_of_birth %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.address %></td>
        <td><%= patient.email %></td>
        <td><%= patient.contact %></td>
        <td><%= patient.doctor.name %></td>
        <td><%= link_to 'Show', patient, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


<%= link_to 'New Patient', new_patient_path, class: "btn btn-success" %>
