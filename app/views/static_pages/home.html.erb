<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/doctor_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/appointment_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Appointment Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Smart-Health-Care Patient Management System</h1>
    <h2>
      This is the home page for the
      Smart-Health-Care Patient Management System
      sample application.
    </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary", id: "me" %>
  </div>
<% end %>
